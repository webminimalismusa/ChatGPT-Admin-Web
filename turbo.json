{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "build-docs": {
      "dependsOn": ["^build-docs"]
    },
    "build": {
      "dependsOn": [
        "^db:generate",
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "JWT_SECRET",
        "NEXT_PUBLIC_TITLE",
        "NEXT_PUBLIC_WECHAT_OA",
        "REDIS_URL",
        "REDIS_TOKEN",
        "OPENAI_ENDPOINT",
        "OPENAI_API_KEY",
        "BING_COOKIE",
        "DOMAIN",
        "CALLBACK_DOMAIN",
        "XUNHU_PAY_APPID",
        "XUNHU_PAY_APPSECRET",
        "NEXT_PUBLIC_EMAIL_SERVICE",
        "MAILGUN_EMAIL_DOMAIN",
        "MAILGUN_EMAIL_API_KEY",
        "ELASTICE_EMAIL_API_KEY",
        "ELASTICE_EMAIL_SENDER",
        "SMS_ACCESS_KEY_ID",
        "TEXT_SECURITY",
        "TENCENT_SECRETID",
        "TENCENT_SECRETKEY",
        "BAIDU_APIKEY",
        "BAIDU_SECRETKEY",
        "EDGE_CONFIG"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
